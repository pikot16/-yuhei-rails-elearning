<h4>Category List for Admin</h4>

<%= link_to("Add Category", new_admin_category_path) %>

<table class="table" style="table-layout:fixed;width:100%;">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Words</th>
            <th scope="col"></th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        <% @categories.each do |category| %>
        <tr>
            <td style="word-wrap:break-word;"><%= category.title %></td>
            <td style="word-wrap:break-word;"><%= category.description %></td>
            <td style="word-wrap:break-word;"><%= "category.words" %></td>
            <td style="word-wrap:break-word;"><%= link_to("Add Word", "#") %></td>
            <td style="word-wrap:break-word;"><%= link_to("Edit", edit_admin_category_path(category)) %></td>
            <td style="word-wrap:break-word;">
                <%= link_to("Delete", admin_category_path(category), method: :delete, 
                                    data: { confirm: "You sure?"}) %> <%# (category)でid指定 %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>

<%= will_paginate %>